<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="mrp_production_consumption_line_link" model="ir.ui.view">
            <field name="name">view.model.form inherited</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view" />
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_raw_ids']/tree/field[last()]" position="after">
                    <field name="need_to_procure" invisible="1" />
                    <field name="free_quantity" attrs="{'invisible': [('need_to_procure','=',False)]}" />
                    <button name="%(procurement_linking_wizard_action)d" string="Link Procurement" type="action" icon="fa-link" attrs="{'invisible': ['|',('free_quantity','&lt;=', 0),('need_to_procure','=',False)] }" 
                    context="{'default_raw_consumption_id': id, 'product_id': product_id }" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
