<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_order_form_line_mto" model="ir.ui.view">
            <field name="name">view_order_form_line_mto</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[last()]" position="after">
                    <field name="node_id" invisible="1" />
                    <field name="priority_id" widget="selection" required="1" />
                    <button name="%(action_mto_client)d" string="MTO Chain" type="action" icon="fa-sitemap" attrs="{'invisible': [('node_id','=',False)]}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
