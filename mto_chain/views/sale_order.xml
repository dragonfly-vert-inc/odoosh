<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="action_mto_client" model="ir.actions.client">
            <field name="name">MTO Chain</field>
            <field name="tag">mto_chain_action</field>
            <!-- <field name="context" eval="{'model': 'stock.traceability.report'}" /> -->
        </record>
        <record id="view_order_form_line_mto" model="ir.ui.view">
            <field name="name">view_order_form_line_mto</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[last()]" position="after">
                    <button name="%(action_mto_client)d" string="MTO Chain" type="action" icon="fa-sitemap" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
