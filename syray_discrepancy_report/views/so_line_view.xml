<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="sale_order_line_view_inherit">
         <field name="name">sale.order.line.view.inherit1</field>
         <field name="model">sale.order</field>
         <field name="inherit_id" ref="sale.view_order_form"/>
         <field name="arch" type="xml">
             <xpath expr="//field[@name='order_line']/tree/field[last()]" position="after">
                    <field name="node_id" invisible="1" />
                    <field name="priority_id" widget="selection" required="1" />
                    <button name="%(action_discrepancy_report)d" string="Discrepancy Report" type="action" icon="fa-table" attrs="{'invisible': [('node_id','=',False)]}" />
              </xpath>
         </field>
    </record>

  </data>
</odoo>