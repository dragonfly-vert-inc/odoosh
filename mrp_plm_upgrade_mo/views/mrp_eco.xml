<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="mrp_eco_update_mo" model="ir.ui.view">
            <field name="name">mrp_eco_update_mo</field>
            <field name="model">mrp.eco</field>
            <field name="inherit_id" ref="mrp_plm.mrp_eco_view_form" />
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_apply']" position="after">
                    <button string="Upgrade MO" name="button_upgrade_mo" type="object" class="oe_highlight" attrs="{'invisible': ['|',('type', 'not in', ('bom')),('state', 'not in', ('done'))]}" groups="mrp.group_mrp_manager,mrp_plm.group_plm_manager"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
