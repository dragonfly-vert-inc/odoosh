<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="bom_line_tree_view" model="ir.ui.view">
            <field name="name">bom_line_tree_view</field>
            <field name="model">mrp.bom.line</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="bom_line_tree_view">
                    <field name="bom_id" />
                    <field name="product_id"/>
                    <field name="product_qty"/>
                    <field name="product_uom_id" />
                    <field name="sequence"/>
                    <field name="operation_id"/>
                </tree>
            </field>
        </record>
        <record id="bom_line_search_view" model="ir.ui.view">
            <field name="name">bom_line_search_view</field>
            <field name="model">mrp.bom.line</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="bom_line_search_view">
                    <field name="product_id"/>
                    <field name="bom_id"/>
                    <field name="operation_id"/>
                    <group expand="0" string="Group by...">
                        <filter string="Bills of Materials" name="bom_group" context="{'group_by': 'bom_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="bom_line_action" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">All Components</field>
            <field name="res_model">mrp.bom.line</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="bom_line_search_view" />
        </record>
        
        <record id="mrp_bom_line_view_bom" model="ir.ui.view">
            <field name="name">mrp_bom_line_view_form</field>
            <field name="model">mrp.bom.line</field>
            <field name="inherit_id" ref="mrp.mrp_bom_line_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="before">
                    <field name="bom_id" />
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
