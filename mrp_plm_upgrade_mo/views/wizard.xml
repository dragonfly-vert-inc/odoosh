<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="apply_update_form" model="ir.ui.view">
            <field name="name">apply_update_form</field>
            <field name="model">apply.update.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form create="0" edit="0" delete="0">
                    <sheet>
                        <h2>
                            Do you want to update all confirmed and in progress MO?
                        </h2>                  
                    </sheet>
                    <footer>
                        <button name="action_apply" string="Yes" type="object" class="oe_highlight"/>
                        <button string="No" special="cancel" />                        
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="apply_update" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Update</field>
            <field name="res_model">apply.update.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
