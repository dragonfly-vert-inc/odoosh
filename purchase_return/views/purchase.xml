<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- primary|extension Inherited .:Form:. view for "model" -->
        <record id="purchase_order_returned_qty" model="ir.ui.view">
            <field name="name">purchase_order_returned_qty</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <field name="qty_received" position="after">
                    <field name="qty_returned" attrs="{'column_invisible': [('parent.state', 'not in', ('purchase', 'done'))]}" />
                </field>
            </field>
        </record>
    </data>
</odoo>
