<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Stock Picking Form -->
        <record id="view_stock_picking_form_inherit_dragon_fly" model="ir.ui.view">
            <field name="name">stock.picking.form.dragon.fly</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="is_pick" invisible="1"/>
                    <field name="sub_location_id" attrs="{'invisible': [('is_pick', '=', False)]}"/>
                </xpath>
            </field>
        </record>

        <!-- Inheit Stock Picking Type Form -->
        <record id="view_stock_picking_type_form_inherit_dragon_fly" model="ir.ui.view">
            <field name="name">stock.picking.type.form.dragon.fly</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='show_reserved']" position="after">
                    <field name="is_pick"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
