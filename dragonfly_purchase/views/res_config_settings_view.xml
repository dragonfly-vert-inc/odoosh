<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_purchase_inherit_po_aflow" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.po.approval.flow</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='po_double_validation_amount']/.." position="after">
                <div class="text-muted">
                    Minimum amount required for approval of PO
                </div>
                <div class="row mt16">
                    <label for="manager_approval_amount" class="col-lg-5 o_light_label"/>
                    <field name="manager_approval_amount"/>
                    <label for="vp_approval_amount" class="col-lg-5 o_light_label"/>
                    <field name="vp_approval_amount"/>
		    <label for="vp_finance_approval_amount" class="col-lg-5 o_light_label"/>
                    <field name="vp_finance_approval_amount"/>
                    <label for="ceo_approval_amount" class="col-lg-5 o_light_label"/>
                    <field name="ceo_approval_amount"/>
		    <label for="cfo_approval_amount" class="col-lg-5 o_light_label"/>
                    <field name="cfo_approval_amount"/>
                </div>
            </xpath>
            <xpath expr="//label[@for='po_double_validation_amount']/.." position="replace"/>
        </field>
    </record>
</odoo>
